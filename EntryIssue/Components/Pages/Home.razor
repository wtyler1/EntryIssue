@page "/"
@inject IJSRuntime JS


<div class="grid-container">
    <!-- Background Gradient -->
    <div class="background-gradient"></div>

    <!-- Header -->
    <div class="header">
        <div class="header-column">
            <div class="header-labels">
              
            </div>
        </div>
        <div class="header-actions">
          
        </div>
    </div>

    <!-- Delete All Messages -->
    <div class="delete-messages">
      
    </div>

    <!-- Messages List -->
    <div class="messages-container">
  
    </div>

  
    <div class="chat-entry">
        <input type="text"
               class="chat-input"
               placeholder="Type your message"
               />
      
    </div>

</div>

<style>

    /* Add your custom styles here */
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }


    #messageInput {
        position: relative; /* Ensures proper focus behavior */
    }

    .grid-container {
        display: grid;
        grid-template-rows: 50px auto 1fr auto;
        height: 100vh;
        background: linear-gradient(to bottom, #F2F2F2 0.0005%, #F5F5F5 100%);
    }

    }

    .messages-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        height: calc(100vh - 100px); /* Adjust based on header + chat-entry height */
    }

    .messages-list {
        flex: 1;
        overflow-y: auto;
        padding-bottom: 65px;
        background-color: transparent;
        margin: 0;
        margin-bottom: 10px;
        max-height: 100%;
    }

    .message-wrapper {
        display: flex;
        flex-direction: column;
        /* margin-bottom: 10px; */ /* Spacing between messages */

        margin-left: 25px;
        margin-right: 25px;
    }

        .message-wrapper.sent {
            align-self: flex-end; /* Float sent messages to the right */
            text-align: right;
        }

        .message-wrapper.received {
            align-self: flex-start; /* Float received messages to the left */
            text-align: left;
        }

    .message-metadata {
        font-size: 12px;
        color: #888;
        margin-bottom: 2px; /* Space between metadata and bubble */
    }

    .system-user {
        color: black;
    }

    .created-on {
        color: #A7A9B7;
    }


    .message-bubble {
        display: inline-block; /* Bubble size adjusts to content */
        padding: 10px;
        border-radius: 10px;
        word-wrap: break-word;
        font-size: 14px;
    }

        .message-bubble.sent {
            background-color: #6EB43F !important;
            color: white;
        }

        .message-bubble.received {
            background-color: #FFFFFF !important;
            color: #A7A9B7;
            border: 1px solid #E0E0E0;
        }


    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #3a404B;
        padding: 0 10px;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        height: 50px; /* Adjust as needed */
    }

        .header p {
            margin: 0;
        }

    .header-text {
        margin: 0;
        color: white;
        font-size: 16px;
    }

    .header-actions {
        display: flex;
        align-items: center;
    }

    .action-icon {
        width: 40px;
        height: 22px;
        margin-right: 20px;
        cursor: pointer;
    }

    .delete-messages {
        display: flex;
        justify-content: flex-end;
        padding: 10px;
    }

    .delete-icon {
        width: 40px;
        height: 22px;
        cursor: pointer;
    }



    .messages-list li {
        display: block; /* Ensure each message is on its own line */
        margin-bottom: 10px; /* Add spacing between messages */
    }

    .chat-entry {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 14px;
        bottom: 0;
        position: fixed;
        width: 95%;
        background-color: white;
    }

    .chat-input {
        flex: 1;
        padding: 10px;
        height: 3vh;
        background-color: #F9F9F9;
        border: none;
        border-radius: 5px;
        color: black;
        placeholder-color: gray;
    }

    .send-icon {
        width: 24px;
        height: 24px;
        cursor: pointer;
    }

  

</style>


